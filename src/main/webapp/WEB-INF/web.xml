  </servlet-mapping>
 <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping> -->
    
    <!-- 错误跳转页面 -->  
    <error-page>  
        <!-- 路径不正确 -->  
        <error-code>404</error-code>  
        <location>/WEB-INF/errorpage/404.jsp</location>  
    </error-page>  
